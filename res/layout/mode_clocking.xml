<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
 
    			         
    <flex.android.magiccube.view.ViewClockingMode
        android:id="@+id/game_view_clocking"
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	
    />

	<ImageButton android:id="@+id/bt_clocking_startob"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerInParent="true"
	    android:background="@drawable/buttons_bg1"
	/> 
    			
   	<ImageView
   			android:id="@+id/img_clocking_clock"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@drawable/clock"
    		android:paddingTop="5dip"
    		android:paddingLeft="5dip"
    		android:visibility="gone"/>
   	
<!-- 	<ImageView
   			android:id="@+id/img_clocking_time"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@drawable/digit0"
    		android:layout_toRightOf="@id/clock"
    		android:paddingTop="5dip"
    		android:paddingLeft="5dip"
    		android:visibility="gone"/> -->


   	<TextView
   			android:id="@+id/txt_clocking_time"
   			android:layout_toRightOf="@id/img_clocking_clock"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:paddingTop="5dip"
    		android:paddingLeft="5dip"
    		android:textColor="@+color/dark"
    		android:visibility="gone"/>
   	
   	<ImageView
   			android:id="@+id/img_clocking_nstep"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@drawable/nstep"
    		android:layout_toRightOf="@id/img_clocking_clock"
    		android:paddingTop="5dip"
    		android:paddingLeft="85dip"
    		android:visibility="gone"/>
   	
   	<TextView
   			android:id="@+id/txt_clocking_nStep"
   			android:layout_toRightOf="@id/img_clocking_nstep"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:paddingTop="5dip"
    		android:paddingLeft="5dip"
    		android:visibility="gone"/>   	
   		
    <SeekBar
    	android:id="@+id/bt_clocking_timer"
    	android:layout_toRightOf="@id/img_clocking_clock"
    	android:layout_height="wrap_content"
    	android:layout_width="fill_parent"
    	android:visibility="gone"
    	android:paddingTop="5dip"
    	android:paddingLeft="5dip"
    	android:paddingRight="10dip"
    	android:paddingBottom="5dip"
    	/>
   
    	<LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_clocking_moveback"
       	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true">
		<ImageButton 
		  android:id = "@+id/bt_clocking_moveback"
		  android:layout_width = "wrap_content"
		  android:layout_height = "wrap_content" 
		  android:background="@drawable/buttons_moveback_unable"
		  android:contentDescription="@string/moveback"
		/>
	</LinearLayout>
	 
	 <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_clocking_moveforward"
       	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true">
		<ImageButton 
		  android:id = "@+id/bt_clocking_moveforward"
		  android:layout_width = "wrap_content"
		  android:layout_height = "wrap_content" 
		  android:background="@drawable/buttons_moveforward_unable"
		  android:contentDescription="@string/moveforward"
		/>
	</LinearLayout>

	<ImageView
          	android:layout_width="fill_parent"
   			android:layout_height="fill_parent"
    		android:id="@+id/clocking_loading"
    		android:src="@drawable/loading"
    		android:scaleType="fitXY"
    		android:visibility="visible"/>
	
</RelativeLayout>
