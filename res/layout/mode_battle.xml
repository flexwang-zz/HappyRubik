<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
 
    			         
    <flex.android.magiccube.view.ViewBattleMode
        android:id="@+id/game_view_battle"
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:visibility="visible"
    	
    />
    
	<flex.android.magiccube.view.ViewBattleMode
        android:id="@+id/game_view_battle2"
        android:layout_width="130dp"
    	android:layout_height="130dp"
    	android:layout_alignParentRight="true"
    	android:visibility="invisible"
    />
     	
	<ImageButton android:id="@+id/bt_battle_startob"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:visibility="gone"
	    android:layout_centerInParent="true"
	    android:background="@drawable/buttons_bg1"
	/> 
	
	<ImageView
   			android:id="@+id/img_battle_clock"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@drawable/clock"
    		android:paddingTop="5dip"
    		android:paddingLeft="5dip"
    		android:visibility="gone"/>
   	
   	<TextView
   			android:id="@+id/txt_battle_time"
   			android:layout_toRightOf="@id/img_battle_clock"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:paddingTop="5dip"
    		android:paddingLeft="5dip"
    		android:textColor="@+color/dark"
    		android:visibility="gone"/>
   	
   	<ImageView
   			android:id="@+id/img_battle_nstep"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@drawable/nstep"
    		android:layout_toRightOf="@id/img_battle_clock"
    		android:paddingTop="5dip"
    		android:paddingLeft="85dip"
    		android:visibility="gone"/>
   	
   	<TextView
   			android:id="@+id/txt_battle_nStep"
   			android:layout_toRightOf="@id/img_battle_nstep"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:paddingTop="5dip"
    		android:paddingLeft="5dip"
    		android:visibility="gone"/>   	
   		
    <SeekBar
    	android:id="@+id/sbar_battle_timer"
    	android:layout_toRightOf="@id/img_battle_clock"
    	android:layout_height="wrap_content"
    	android:layout_width="fill_parent"
    	android:visibility="gone"
    	android:paddingTop="5dip"
    	android:paddingLeft="5dip"
    	android:paddingRight="10dip"
    	android:paddingBottom="5dip"
    	/>   	
   		

<LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_battle_moveback"
       	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true">
		<ImageButton 
		  android:id = "@+id/bt_battle_moveback"
		  android:layout_width = "wrap_content"
		  android:layout_height = "wrap_content" 
		  android:visibility="invisible"
		  android:background="@drawable/buttons_moveback_unable"
		  android:contentDescription="@string/moveback"
		/>
	</LinearLayout>
	 
	 <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_battle_moveforward"
       	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true">
		<ImageButton 
		  android:id = "@+id/bt_battle_moveforward"
		  android:layout_width = "wrap_content"
		  android:layout_height = "wrap_content" 
		  android:background="@drawable/buttons_moveforward_unable"
		  android:visibility="invisible"
		  android:contentDescription="@string/moveforward"
		/>
	</LinearLayout>
	
</RelativeLayout>
